<a class="btn btn-primary mt-3" href="/toy/figure">Back</a>
    <div class="container col-md-8 mt-3 mb-3">
        <form action="/toy/figure/edit/{{ figure._id }}" method="post">
            <h1 class="text text-danger">Edit Product</h1>
            <div class="form-group">
                <label class="h4 text text-success">Brand name</label>
                <input class="form-control" type="text" name="brandName" value="{{ figure.brandName }}">
            </div>
            <div class="form-group">
                <label class="h4 text text-success">Model name</label>
                <input class="form-control" type="text" name="modelName" value="{{ figure.modelName }}">
            </div>
            <div class="form-group">
                <label class="h4 text text-success">Description</label>
                <input class="form-control" type="text" name="description" value="{{ figure.description }}">
            </div>
            <div class="form-group">
                <label class="h4 text text-success">Price</label>
                <input class="form-control" type="text" name="price" value="{{ figure.price }}">
            </div>
            <div class="form-group">
                <label class="h4 text text-success">Quantity</label>
                <input class="form-control" type="text" name="quantity" value="{{ figure.quantity }}">
            </div>
            <div class="form-group">
                <label class="h4 text text-success">Image url</label>
                <input class="form-control" type="text" name="image" value="{{ figure.image }}">
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Edit">
            </div>
        </form> 
    </div>